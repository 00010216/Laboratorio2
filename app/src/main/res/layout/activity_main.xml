<?xml version="1.0" encoding="utf-8"?>
<!-- cambiar el constraint layout por linear layout
abajo menciona estado de aplicacion o error  -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:padding="8dp"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.uca.labo2_00010216.MainActivity">

    <TextView
        android:id="@+id/fstTextView"
        android:textSize="26sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:layout_margin="4dp"
         />

    <TextView
        android:id="@+id/sndTextView"
        android:text="hola"
        android:textSize="26sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        />

    <Button
        android:id="@+id/changeTextButton"
        android:background="@color/colorPrimary"
        android:text="Press Me"
        android:onClick="change Text"
        android:textColor="#FFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
